   float calcular_preco(float preco_de_custo, float porcentagem)
   {
   float resultado;
   float calculo_porcentagem;
   calculo_porcentagem=preco_de_custo*porcentagem/100;
   resultado=preco_de_custo+calculo_porcentagem;
   return resultado;
   }

//-----------------------------------------------------------------Calcular o valor de venda do produto ------------------------------------------------------

   int menu_sim_e_nao(int op2)
   {
   printf ("\n 1 - Sim \n");
   printf ("\n 2 - NÃ£o \n");
   scanf (op2 = 0);
   return op2;
   }

